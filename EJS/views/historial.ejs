<h2 style="color:crimson;">Historial</h2>

<% const hayProductos= productos.length > 0; %>
<% if(hayProductos){ %>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Producto</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        <% for (const producto of productos) {%>
        
        <tr>
            <td>
                <%=producto.title%>
            </td>
            <td>
                <%=producto.price%>
            </td>
            <td>
                <img src=<%=producto.thumbnail%> width="40" eight="30">
            </td>
        </tr>
        <%};%>
    </table>
</div>
<% } else{ %>
<h3 class="alert alert-danger">No hay productos</h1>
    <% } %>