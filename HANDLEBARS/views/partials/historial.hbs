<h2 style="color:crimson;">Historial</h2>


            {{#if productos.length}}
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: yellow;">
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Foto</th>
                    </tr>
                {{#each productos}}
                    
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td><img src={{this.thumbnail}} width="40" eight="30"></td>
                    </tr>
                {{/each}}
                </table>
            </div>
            {{else}}
                <h3 class="alert alert-danger">No hay productos</h1>
            {{/if}}